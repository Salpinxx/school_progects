program three_numbers;                                              // Название программы.
var a, b, c, max: integer;                                          // Вводим переменные.
begin
  writeln ('Скрипт сравнения 3х числел запущен успешно!');          // Отладочная информация о запуске программы.
  writeln ('Введите 3 неравных числа (A, B, C).');                  // Просим пользователя ввести значение переменных.
  readln (a, b, c);                                                 // Считываем данные.
    if ((A = B) or (A = C) or (C = B)) then                         // Защита от дурака.
        write ('Одно из чисел одинавково, введите иное значение.')  // Сообщение пользователю о том что он балбес.
    else                                                            // Продолжение выполнения скрипта, если защита не сработала.
        begin                                                       // Отделение программы от остального скрипта, чтобы он не срабатывал в случае сработки защиты.
            if (A > B) then                                         // Сравниваем числа "А" и "B".
            max:= A else max:= B;                                   // Присваеваем значение переменной "max" в зависимости от результата.
            if (max < C) then                                       // Сравниваем максимальное число с переменной "C".
            max:= C;                                                // Если "C" оказывается больше-делаем его максимальным.
        write ('Самое большое число: ',max);                        // Выводим пользователю максимальное число.
    end;                                                            // Конец отделения кода от программы.
end.   
